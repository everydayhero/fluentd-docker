<source>
  type tcp
  format journalctl
  tag journalctl
  port 5170
  bind 0.0.0.0
</source>

<source>
  type syslog
  port 5140
  bind 0.0.0.0
  tag system
  format everydayhero
</source>

<match **>
  type copy

  <% if ENV["ELASTICSEARCH_HOSTS"] %>
    <store>
      type elasticsearch
      logstash_format true
      hosts <%= ENV["ELASTICSEARCH_HOSTS"] %>
      flush_interval 10
    </store>
  <% elsif ENV["ELASTICSEARCH_HOST"] %>
    <store>
      type elasticsearch
      logstash_format true
      host <%= ENV["ELASTICSEARCH_HOST"] %>
      port <%= ENV["ELASTICSEARCH_PORT"] %>
      flush_interval 10
    </store>
  <% end %>

  <% if ENV["S3_BUCKET"] %>
    <store>
      type s3
      aws_key_id <%= ENV["AWS_KEY"] %>
      aws_sec_key <%= ENV["AWS_SECRET"] %>
      s3_bucket <%= ENV["S3_BUCKET"] %>
      s3_endpoint <%= ENV["S3_ENDPOINT"] %>
      path <%= ENV["S3_PATH"] %>
      buffer_path /tmp
      time_slice_format %Y-%m-%d/%H
      time_slice_wait 10m
    </store>
  <% end %>
</match>
